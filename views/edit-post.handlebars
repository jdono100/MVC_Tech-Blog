<div class="container" id="editpostcontainer">
  <div class="card" >
    <header class="card-header">
      <div class="card-header-title">
        <label class="label">Edit your post:</label>
      </div>
    </header>
    <div class="card-content editpostcontent">
      <div class="columns is-mobile">
        <div class="column is-fullwidth">
          <div class="field">
            <div class="control">
              <input type="text" class="input" id="editposttitle" data-postid="{{post.id}}" value="{{post.title}}">
            </div>
          </div>
        </div>
      </div>
      <div class="columns is-mobile">
        <div class="column is-fullwidth">
          <div class="field">
            <div class="control">
              <textarea type="text" id="editpostcontent" class="textarea" data-postid="{{post.id}}">{{post.post_text}}</textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="columns is-mobile">
        <div class="column is-half is-offset-one-quarter">
          <div class="buttons">
            <button class="button is-link is-fullwidth" id="submiteditpostbtn" data-postid="{{post.id}}">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="../js/editHandler.js"></script>