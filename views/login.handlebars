<div class="container has-text-centered">
  <div class="control block radioblock">
    <label class="radio">
      <input type="radio" name="foobar" id="loginradio" checked>
      Log in
    </label>
    <label class="radio">
      <input type="radio" name="foobar" id="signupradio">
      Sign up
    </label>
  </div>
  <div class="loginsection block" style="display: block;">
    <div class="columns is-mobile">
      <div class="column is-half is-offset-one-quarter">
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Username" id="username-login">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="password" placeholder="Password" id="pw-login">
          </div>
        </div>
      </div>
    </div>
    <div class="columns is-mobile">
      <div class="column is-half is-offset-one-quarter">
        <div class="buttons">
          <button class="button is-link is-fullwidth" type="submit" id="submitlogin">Log In</button>
        </div>
      </div>
    </div>
  </div>
  <div class="signupsection block" style="display: none;">
    <div class="columns is-mobile">
      <div class="column is-half is-offset-one-quarter">
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Username" id="username-signup">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Email" id="email-signup">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Github" id="github-signup">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="password" placeholder="Password" id="pw-signup">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="password" placeholder="Confirm password" id="confirmpw-signup">
          </div>
        </div>
      </div>
    </div>
    <div class="columns is-mobile">
      <div class="column is-half is-offset-one-quarter">
        <div class="buttons">
          <button class="button is-link is-fullwidth" type="submit" id="submitsignup">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="../js/login.js"></script>